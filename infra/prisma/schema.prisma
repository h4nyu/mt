// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Board {
  code      String
  time      DateTime
  price     Float?
  sign      String?
  createdAt DateTime @default(now())

  askSign       String?
  bidSign       String?
  BoardRow      BoardRow[]
  overQuantity  Int?
  underQuantity Int?

  @@id([code, time])
}

model BoardRow {
  code     String
  time     DateTime
  price    Float
  quantity Int
  kind     String // ASK or BID
  order    Int
  board    Board    @relation(fields: [code, time], references: [code, time])

  @@id([code, time, kind, order])
}
