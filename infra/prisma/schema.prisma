// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Board {
  symbol       String
  exchange     String?
  currentTime  DateTime
  currentPrice Float?
  currentSign  String?
  createdAt    DateTime @default(now())

  askSign         String?
  bidSign          String?
  BoardRow         BoardRow[]
  overQuantity Int?
  underQuantity Int?
  @@id([symbol, currentTime])
}

model BoardRow {
  symbol      String
  currentTime DateTime
  price       Float
  quantity    Int
  kind        String  // ASK or BID
  order       Int
  board       Board    @relation(fields: [symbol, currentTime], references: [symbol, currentTime])

  @@id([symbol, currentTime, kind, order])
}
